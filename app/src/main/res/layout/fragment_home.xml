<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jiayuan.huawei.hwframeworklib.ui.customview.refreshLayout.JRefreshLayout
        android:id="@+id/mJRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.jiayuan.huawei.hwframeworklib.ui.customview.recyclerViews.EmptyRecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_background" />
    </com.jiayuan.huawei.hwframeworklib.ui.customview.refreshLayout.JRefreshLayout>

    <include layout="@layout/layout_empty" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="15dp"
        android:src="@drawable/ic_fab_star" />

</FrameLayout>
